{
  "name": "defectless",
  "private": false,
  "version": "0.3.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "description": "Defectless - A tool for building predictable and reliable TypeScript programs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "author": "Alexei KLENIN",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphire-cms/defectless.git"
  },
  "bugs": {
    "url": "https://github.com/sapphire-cms/defectless/issues"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "rollup -c",
    "build:all": "npm run clean && npm run build && npm test && npm run lint && npm run link",
    "clean": "rimraf dist",
    "link": "npm link",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "vitest run --coverage --typecheck --typecheck.include='test/**/*.test.ts' --typecheck.tsconfig=tsconfig.test.json"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml,yaml}": "prettier --write"
  }
}
